{
  "manifest_version": 3,
  "name": "PRitty: Enhanced GitHub PR UI & Quick Actions",
  "version": "1.2.0",
  "description": "Enhance your GitHub Pull Request workflow with quick actions, streamlined status checks, and a more productive code review UI.",
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": [
        "src/core/namespace.js",
        "src/modules/Repo/branches-nav-button.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://github.com/*/pull/*"],
      "js": [
        "src/core/namespace.js",
        "src/core/icons.js",
        "src/core/utils.js",
        "src/modules/PR/action-buttons-bar/github-state.js",
        "src/modules/PR/action-buttons-bar/pr-actions-button.js",
        "src/modules/PR/action-buttons-bar/review-button.js",
        "src/modules/PR/Conversation/timeline-reorder.js",
        "src/modules/PR/scroll-top.js",
        "src/modules/PR/File Changes/diff-nav-buttons.js",
        "src/modules/PR/File Changes/split-diff-resizer.js",
        "src/modules/PR/File Changes/file-tree-enhancements.js",
        "src/modules/PR/action-buttons-bar/header-actions.js",
        "src/content.js"
      ],
      "css": [
        "styles/base.css",
        "styles/buttons.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
